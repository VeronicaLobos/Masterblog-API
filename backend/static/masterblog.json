{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "host": "localhost:5001",
  "basePath": "/",
  "tags": [
    {
      "name": "Post",
      "description": "Post API - CRUD"
    }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Returns all posts",
        "produces": [
          "application/json",
          "application/vnd.myapi.v2+json",
          "application/vnd.myapi.v1+json"
        ],
        "tags": [
          "Post"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer" },
                  "title": { "type": "string" },
                  "content": { "type": "string" },
                  "author": { "type": "string" },
                  "date": { "type": "string", "format": "date-time" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "produces": [
          "application/json"
        ],
        "tags": [
          "Post"
        ],
        "parameters": [
          {
            "name": "post",
            "in": "body",
            "required": true,
            "schema": {
                "type": "object",
                "properties": {
                    "title": { "type": "string" },
                    "content": { "type": "string" },
                    "author": { "type": "string" },
                    "date": { "type": "string", "format": "date-time" }
                }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Post created successfully",
            "schema": {
                "type": "object",
                "properties": {
                    "title": { "type": "string" },
                    "content": { "type": "string" },
                    "author": { "type": "string" },
                    "date": { "type": "string", "format": "date-time" }
                }
            }
          }
        }
      }
    }
  }
}

